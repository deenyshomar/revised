#include<stdio.h>
/**
 * Description: Passing pointers as argument
 *
 * main - entry point
 *
 * @p: pointer parametre
 *
 * Return: Always 0 (Success)
 *
 **/
int increament(int *p)
{
	*p++;
}
int main(void)
{
	int i;
	i = 10;
	int *j;
	j = &i;

	printf("value of i before function call : %d\n", i);
	increament(j);
	printf("value of i after function call : %d\n", i);
}
